{
    "name": "stonedz/pff2",
    "type": "pff2-core",
    "description": "A simple yet robust PHP MVC framework",
    "keywords": ["framework"],
    "homepage": "https://github.com/stonedz/pff2",
    "license": "MIT",
    "authors": [
        {
            "name": "Paolo Fagni",
            "email": "paolo.fagni@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "doctrine/orm": "v2.4.4",
        "doctrine/cache": "v1.3.0",
        "symfony/yaml": "2.5.3",
        "symfony/console": "2.5.3",
        "swiftmailer/swiftmailer": "5.2.1",
        "ezyang/htmlpurifier": "*",
        "mobiledetect/mobiledetectlib": "2.8.3",
        "components/normalize.css": "2.1.2",
        "components/modernizr": "2.6.2",
        "stonedz/pff2-installers": "*",
        "doctrine/mongodb-odm": "1.0.*@dev"
    },
    "require-dev": {
        "mikey179/vfsStream": "1.*",
        "codeception/codeception": "*"
    },
    "bin": ["scripts/init"],
    "autoload": {
        "psr-4": {
            "pff\\": "src",
            "pff\\modules\\": [
                "src/modules/session",
                "src/modules/url",
                "src/modules/search",
                "src/modules/auth",
                "src/modules/automatic_header_footer",
                "src/modules/config_var",
                "src/modules/cookies",
                "src/modules/default_controller",
                "src/modules/encryption",
                "src/modules/exception_handler",
                "src/modules/htmlpurifier",
                "src/modules/logger",
                "src/modules/mail",
                "src/modules/main_layout",
                "src/modules/mobile_views",
                "src/modules/multilanguage",
                "src/modules/network_helper",
                "src/modules/paypal",
                "src/modules/search",
                "src/modules/session",
                "src/modules/tidy",
                "src/modules/url"

            ]
        }
    }
}
